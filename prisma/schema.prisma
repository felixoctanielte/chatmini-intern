generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  chats     ChatSession[]
}

model ChatSession {
  id        Int      @id @default(autoincrement())
  title     String?
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  messages  Message[]
  createdAt DateTime @default(now())
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  sender    String
  chatId    Int
  chat      ChatSession @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
}
